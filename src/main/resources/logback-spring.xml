<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds">

  <springProfiler name="local, dev, test, stg">
    <property name="LEVEL" value="DEBUG"/>

    <!-- hibernate logger -->
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicExtractor" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor" level="DEBUG"/>

  </springProfiler>

  <springProfiler name="docker">
    <property name="LEVEL" value="DEBUG"/>

   <!-- hibernate logger -->
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicExtractor" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor" level="DEBUG"/>
  </springProfiler>





  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
      <providers>
        <timestamp>
          <fieldName>timestamp</fieldName>
        </timestamp>
        <mdc/>
        <context/>
        <logLevel/>
        <loggerName/>
        <threadName/>
        <processId/>
        <processName/>
        <hostName/>
        <pattern>
          <pattern>
            {
              "timestamp": "%date{ISO8601}",
              "level": "%level",
              "thread": "%thread",
              "logger": "%logger",
              "message": "%message",
              "context": "%mdc",
              "exception": "%ex{full}",
              "caller": "%caller",
              "class": "%class",
              "method": "%method",
              "file": "%file",
              "line": "%line",
              "application": "my-spring-boot-project",
              "host": "${HOSTNAME:-unknown}",
              "traceId": "%X{traceId}",
              "spanId": "%X{spanId}",
              "user": "%X{user}",
              "requestId": "%X{requestId}",
              "uri": "%X{uri}",
              "remoteAddr": "%X{remoteAddr}"
            }
          </pattern>
        </pattern>
        <arguments/>
        <stackTrace/>
      </providers>
    </encoder>
  </appender>
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/app-log.json</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/app-log.%d{yyyy-MM-dd}.json</fileNamePattern>
      <maxHistory>7</maxHistory>
      <!-- Optionally, set a total size cap for all log files -->
      <totalSizeCap>10MB</totalSizeCap>
    </rollingPolicy>
    <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
      <providers>
        <timestamp>
          <fieldName>timestamp</fieldName>
        </timestamp>
        <mdc/>
        <context/>
        <logLevel/>
        <loggerName/>
        <threadName/>
        <processId/>
        <processName/>
        <hostName/>
        <pattern>
          <pattern>
            {
              "timestamp": "%date{ISO8601}",
              "level": "%level",
              "thread": "%thread",
              "logger": "%logger",
              "message": "%message",
              "context": "%mdc",
              "exception": "%ex{full}",
              "caller": "%caller",
              "class": "%class",
              "method": "%method",
              "file": "%file",
              "line": "%line",
              "application": "my-spring-boot-project",
              "host": "${HOSTNAME:-unknown}",
              "traceId": "%X{traceId}",
              "spanId": "%X{spanId}",
              "user": "%X{user}",
              "requestId": "%X{requestId}",
              "uri": "%X{uri}",
              "remoteAddr": "%X{remoteAddr}"
            }
          </pattern>
        </pattern>
        <arguments/>
        <stackTrace/>
      </providers>
    </encoder>
  </appender>

  <!-- Spring Framework -->
  <logger name="org.springframework" level="INFO"/>
  <logger name="org.springframework.web" level="INFO"/>

  <!-- JPA -->
  <logger name="org.springframework.data.jpa" level="INFO"/>

  <!-- Hinernate -->
  <logger name="org.hibernate" level="INFO"/>


  <root level="${LEVEL}">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="FILE"/>
  </root>
</configuration>
